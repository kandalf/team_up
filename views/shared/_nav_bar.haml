%nav.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ :type => :button, :'data-toggle' => :collapse, :'data-target' => "#navbar" }
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{ :href => "/" } TeamUp

    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        - if current_user
          %li{ :class => (req.path == '/dashboard') ? 'active' : '' }
            = link_to '/dashboard', 'Dashboard'
          %li{ :class => (req.path == '/standups') ? 'active' : '' }
            = link_to '/standups', 'Standups'

      %ul.nav.navbar-nav.navbar-right
        %li
          %a{ :href => "https://github.com/#{current_user.github_user}", :target => "_blank" }
            %img#avatar{ :src => current_user.gravatar_url, :width => 18, :height => 18 }
            = current_user.github_user
        %li
          %a.logout{ :href => "/logout" } Logout
